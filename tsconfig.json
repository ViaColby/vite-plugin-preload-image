{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "lib": ["es2015", "es2016", "es2017", "es2018", "es2019", "es2020"],
    "moduleResolution": "node",
    "target": "es2020",
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}
